# Environment Variables for JoBika

# OpenAI API
OPENAI_API_KEY=your_openai_api_key_here

# Database
DATABASE_PATH=./backend/database/jobika.db

# Server
PORT=3000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=jobika_secret_key_change_in_production
JWT_EXPIRES_IN=7d

# Job Scraper Settings
SCRAPER_RATE_LIMIT=10
SCRAPER_TIMEOUT=30000
SCRAPER_USER_AGENT=Mozilla/5.0 (Macintosh; Intel Mac OS X 10_15_7)

# Session
SESSION_SECRET=session_secret_change_in_production

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
